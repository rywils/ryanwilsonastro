// tsconfig.json
{
  
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "bundler",        // or "nodenext" if you prefer
    "module": "ESNext",
    "target": "ES2020",

    // Your React setup
    "jsx": "react-jsx",

    // Your aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Astro/TS quality-of-life
    "types": ["astro/client"],
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  
  "include": ["src", "env.d.ts", "astro.config.*"]
}
